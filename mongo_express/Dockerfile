FROM mongo-express:latest

ENV ME_CONFIG_MONGODB_SERVER=my-chatgpt-bot-mongo.internal
ENV ME_CONFIG_MONGODB_PORT=${MONGODB_PORT:-27017}
ENV ME_CONFIG_MONGODB_ENABLE_ADMIN=true
ENV ME_CONFIG_MONGODB_AUTH_DATABASE=chatgpt_telegram_bot
ENV ME_CONFIG_BASICAUTH_USERNAME=${MONGO_EXPRESS_USERNAME:-guinengni}
ENV ME_CONFIG_BASICAUTH_PASSWORD=${MONGO_EXPRESS_PASSWORD:-npmrun}

EXPOSE ${MONGO_EXPRESS_PORT:-8081}
